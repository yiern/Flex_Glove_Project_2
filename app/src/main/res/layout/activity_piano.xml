<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PianoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Score:       times failed:" />

        <ScrollView
            android:id="@+id/viewScroll"
            android:layout_width="fill_parent"
            android:layout_height="403dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txtReceive"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="#eeeeee"
                android:hint="Message shows up here ..."
                android:scrollbars="vertical"
                android:typeface="monospace" />
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:orientation="horizontal">

            <Button
                android:background="@color/C_Block"
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="147dp"
                android:layout_weight="1" />

            <Button
                android:background="@color/D_Block"
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="147dp"
                android:layout_weight="1" />

            <Button
                android:background="@color/E_Block"
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="147dp"

                android:layout_weight="1" />

            <Button
                android:background="@color/F_Block"
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="147dp"
                android:layout_weight="1" />

            <Button
                android:background="@color/G_Block"
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="147dp"
                android:layout_weight="1" />

        </LinearLayout>

        <Button
            android:id="@+id/Start_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Play" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="End Game" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>